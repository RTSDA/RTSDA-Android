<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Resources Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resources"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bibleButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bible"
            android:textColor="?android:attr/textColorPrimary"
            android:textAlignment="textStart"
            app:icon="@drawable/ic_book"
            app:iconTint="?android:attr/textColorPrimary"
            app:iconGravity="start"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sabbathSchoolButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sabbath School"
            android:textColor="?android:attr/textColorPrimary"
            android:textAlignment="textStart"
            app:icon="@drawable/ic_book"
            app:iconTint="?android:attr/textColorPrimary"
            app:iconGravity="start"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/egwButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EGW Writings"
            android:textColor="?android:attr/textColorPrimary"
            android:textAlignment="textStart"
            app:icon="@drawable/ic_book_closed"
            app:iconTint="?android:attr/textColorPrimary"
            app:iconGravity="start"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/hymnalButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adventist Hymnal"
            android:textColor="?android:attr/textColorPrimary"
            android:textAlignment="textStart"
            app:icon="@drawable/ic_music_note"
            app:iconTint="?android:attr/textColorPrimary"
            app:iconGravity="start"/>

        <!-- Connect Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connect"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/contactButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:textColor="?android:attr/textColorPrimary"
            android:textAlignment="textStart"
            app:icon="@drawable/ic_envelope"
            app:iconTint="?android:attr/textColorPrimary"
            app:iconGravity="start"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/callButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Call Us"
            android:textColor="?android:attr/textColorPrimary"
            android:textAlignment="textStart"
            app:icon="@drawable/ic_phone"
            app:iconTint="?android:attr/textColorPrimary"
            app:iconGravity="start"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/facebookButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Facebook"
            android:textColor="?android:attr/textColorPrimary"
            android:textAlignment="textStart"
            app:icon="@drawable/ic_link"
            app:iconTint="?android:attr/textColorPrimary"
            app:iconGravity="start"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/directionsButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Directions"
            android:textColor="?android:attr/textColorPrimary"
            android:textAlignment="textStart"
            app:icon="@drawable/ic_map"
            app:iconTint="?android:attr/textColorPrimary"
            app:iconGravity="start"/>

        <!-- About Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/beliefsButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Our Beliefs"
            android:textColor="?android:attr/textColorPrimary"
            android:textAlignment="textStart"
            app:icon="@drawable/ic_heart"
            app:iconTint="?android:attr/textColorPrimary"
            app:iconGravity="start"/>

        <!-- App Info Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="App Info"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_info"
                android:tint="?android:attr/textColorSecondary"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Version"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/versionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView> 